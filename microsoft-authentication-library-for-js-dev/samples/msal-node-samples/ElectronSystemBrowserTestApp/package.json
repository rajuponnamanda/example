{
    "name": "electronsystembrowsertestapp",
    "productName": "electronsystembrowsertestapp",
    "version": "1.0.0",
    "description": "A sample Electron application that uses msal-node to acquire tokens using system browser",
    "main": ".webpack/main",
    "scripts": {
        "build": "tsc",
        "start": "electron-forge start",
        "package": "electron-forge package",
        "build:package": "cd ../../../lib/msal-common && npm run build && cd ../msal-node && npm run build",
        "install:local": "npm install ../../../lib/msal-common && npm install ../../../lib/msal-node",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "eslint --ext .ts,.tsx ."
    },
    "keywords": [
        "msal-node",
        "electron",
        "javascript"
    ],
    "license": "MIT",
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.70",
        "@electron-forge/maker-deb": "^6.0.0-beta.70",
        "@electron-forge/maker-rpm": "^6.0.0-beta.70",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.70",
        "@electron-forge/maker-zip": "^6.0.0-beta.70",
        "@electron-forge/plugin-webpack": "6.0.0-beta.70",
        "@popperjs/core": "^2.11.6",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "@vercel/webpack-asset-relocator-loader": "1.7.3",
        "autoprefixer": "^10.4.13",
        "css-loader": "^6.0.0",
        "electron": "21.2.0",
        "eslint": "^8.0.1",
        "eslint-plugin-import": "^2.25.0",
        "fork-ts-checker-webpack-plugin": "^7.2.1",
        "node-loader": "^2.0.0",
        "postcss": "^8.4.18",
        "postcss-loader": "^4.2.0",
        "sass": "^1.55.0",
        "sass-loader": "^10.1.1",
        "style-loader": "^3.0.0",
        "ts-loader": "^9.2.2",
        "ts-node": "^10.0.0",
        "typescript": "~4.5.4"
    },
    "dependencies": {
        "@azure/msal-common": "file:../../../lib/msal-common",
        "@azure/msal-node": "file:../../../lib/msal-node",
        "axios": "^1.1.3",
        "bootstrap": "^5.2.2",
        "electron-squirrel-startup": "^1.0.0"
    },
    "config": {
        "forge": {
            "packagerConfig": {},
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "electron-react-test-app"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ],
            "plugins": [
                {
                    "name": "@electron-forge/plugin-webpack",
                    "config": {
                        "mainConfig": "./webpack.main.config.js",
                        "renderer": {
                            "config": "./webpack.renderer.config.js",
                            "entryPoints": [
                                {
                                    "html": "./src/index.html",
                                    "js": "./src/renderer.ts",
                                    "name": "main_window",
                                    "preload": {
                                        "js": "./src/preload.ts"
                                    }
                                }
                            ]
                        }
                    }
                }
            ]
        }
    }
}
